<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <TextView 
        android:id="@+id/widget_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="station"
        android:textSize="10sp"
        />
    <TextView 
        android:layout_below="@+id/widget_station"
        android:id="@+id/widget_busNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="num"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        />
    <TextView 
        android:layout_alignBaseline="@+id/widget_busNum"
        android:layout_toRightOf="@+id/widget_busNum"
        android:id="@+id/widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="25sp"
        android:layout_marginRight="10dp"
        />
    <TextView 
        android:layout_alignBaseline="@+id/widget_busNum"
        android:layout_toRightOf="@+id/widget_time"
        android:id="@+id/widget_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where"
        android:textSize="25sp"
        android:layout_marginRight="10dp"
        />
    <ImageButton 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/widget_reflesh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/button_selector"
        android:scaleType="centerCrop"
        android:background="#00000000"
        />
</RelativeLayout>
