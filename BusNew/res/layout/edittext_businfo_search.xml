<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_activity_businfo_search_container"
    >
    <EditText 
        android:id="@+id/edittext_activity_businfo_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="정류장이름이나 번호를 넣어주세요"
        />
    <Button
        android:id="@+id/btn_activity_businfo_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_bus_info_search"
        android:onClick="searchResultClick"
        />

</LinearLayout>
