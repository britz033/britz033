    android:orientation="vertical" 
    >
    <Button 
        android:id="@+id/btn_refrash_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="re"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_favorite"
